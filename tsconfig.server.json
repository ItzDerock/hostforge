{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "isolatedModules": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["next-env.d.ts", "src/server/**/*.ts", "src/server/**/*.tsx"]
}
